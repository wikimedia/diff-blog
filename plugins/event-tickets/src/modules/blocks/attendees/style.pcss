.tribe-editor__event-attendees__title {
	align-items: center;
	display: flex;
	font-family: 'Helvetica', 'sans-serif';
	justify-content: center;
	max-width: 100%;

	&--selected {
		border: none;
	}

	&--placeholder {
		color: #333;
		cursor: text;
		background-color: transparent;
		border: 0;
		display: block;
		font-size: 1.3125rem;
		font-weight: bold;
		min-height: 50px;
		min-width: 200px;
		padding: 5px 0;
	}
}

.tribe-editor__event-attendees__title-text {
	border: 0;
	padding: 0;
	margin: 0;
	color: #fff;
	background-color: transparent;
	flex: 1;
	font-size: 1.3125rem;
	font-weight: normal;
	table-layout: fixed;
	width: 100%;

	input {

		/* extra class to override WP 5.0 styles */
		.tribe-editor__event-attendees & {
			font-size: 1.3125rem;
			min-height: 50px;
			background-color: #fff;
			border: 0;
			color: #333;
			font-family: 'Helvetica', 'sans-serif';
			font-weight: bold;
			overflow: hidden;
			padding: 5px 0;
			max-width: calc(100% - 20px);
			min-width: 200px;

			&:focus {
				outline: 0;
				box-shadow: none;
			}
		}
	}

	&--empty {
		input {
			background-color: #FFF;
			color: #8D949B;

			&::placeholder {
				color: #8D949B;
			}
		}
	}

	.tribe-editor__event-attendees__title &,
	.tribe-editor__event-attendees__title &:focus {
		[data-mce-selected="inline-boundary"] {
			background: transparent;
		}
	}
}

.tribe-editor__event-attendees__gravatars {
	padding-bottom: 20px;

	svg {
		width: 60px;
		height: 60px;
		border-radius: 100%;
		margin-right: 8px;
	}
}
